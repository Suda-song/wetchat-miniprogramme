swiper image{
  width: 100%;
}

.class-container{
  display: flex;
  flex-direction: column;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 100;
  z-index: 500;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #A8A8A8;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}

.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #494949;
  color: #363636;
}

.content-wrapper{
  padding-top: 50px;
}

.content{
  height: 500rpx;
}

.introduction{
  border-radius: 30rpx;
  padding: 30rpx;
  background-color: lightskyblue;
}

.e_book{
  display: flex;
  flex:space-between;
  margin-top: 10px;
  border-radius: 30rpx;
  padding: 30rpx;
  background-color: lightskyblue;
}

.Watch{
  text-align: center;
  line-height: 8px;
  height: 20px;
  font-size: 13px;
}